@Eroad_FleetManagement_Command_API_HostAddress = http://localhost:5200
@driverId = 169d6944-f716-4337-94de-cacf16250f11
@vehicleId = 5a1b2c3d-4e5f-6789-0abc-def123456700

### Add Driver
POST {{Eroad_FleetManagement_Command_API_HostAddress}}/api/v1/AddDriver
Content-Type: application/json

{
  "id": "{{driverId}}",
  "name": "John Smith",
  "driverLicense": "DL123456789",
  "driverStatus": 0
}

### Update Driver
PUT {{Eroad_FleetManagement_Command_API_HostAddress}}/api/v1/UpdateDriver/{{driverId}}
Content-Type: application/json

{
  "driverLicense": "DL987654321"
}

### Change Driver Status
PUT {{Eroad_FleetManagement_Command_API_HostAddress}}/api/v1/ChangeDriverStatus/{{driverId}}
Content-Type: application/json

{
  "oldStatus": 1,
  "newStatus": 0
}

### Add Vehicle
POST {{Eroad_FleetManagement_Command_API_HostAddress}}/api/v1/AddVehicle
Content-Type: application/json

{
  "id": "{{vehicleId}}",
  "registration": "ABC123",
  "vehicleType": "Truck"
}

### Update Vehicle
PUT {{Eroad_FleetManagement_Command_API_HostAddress}}/api/v1/UpdateVehicle/{{vehicleId}}
Content-Type: application/json

{
  "registration": "XYZ789",
  "vehicleType": "Van"
}

### Change Vehicle Status
PUT {{Eroad_FleetManagement_Command_API_HostAddress}}/api/v1/ChangeVehicleStatus/{{vehicleId}}
Content-Type: application/json

{
  "oldStatus": 0,
  "newStatus": 1,
  "reason": "Scheduled maintenance"
}

### Assign Driver To Vehicle
PUT {{Eroad_FleetManagement_Command_API_HostAddress}}/api/v1/AssignDriverToVehicle
Content-Type: application/json

{
  "vehicleId": "{{vehicleId}}",
  "driverId": "{{driverId}}"
}

